# ~/.bash_aliases
# Sourced by ~/.bashrc

alias ls='ls --color=auto'
alias l='ls -A'
alias la='ls -Alh'
alias ll='ls -l'
alias lls='ls -lh'

alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# Convenient sizes
alias df='df -Th'
alias du='du -sh'
alias free='free -mt'

# Enable mouse support in MC
alias mc='mc -x'
alias mcedit='mcedit -x'
alias mcview='mcview -x'

